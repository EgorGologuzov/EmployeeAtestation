<UserControl
    x:Class="EmployeeAtestation.Controls.RegularButton"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:EmployeeAtestation.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    MouseEnter="button_MouseEnter"
    MouseLeave="button_MouseLeave"
    MouseUp="button_MouseUp"
    mc:Ignorable="d">
    <Border
        x:Name="border"
        Height="40"
        Padding="20,3"
        Background="{StaticResource Brush3}"
        BorderThickness="0"
        CornerRadius="20">
        <TextBlock
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            FontSize="18"
            FontWeight="Bold"
            Foreground="White"
            Text="{Binding Text, RelativeSource={RelativeSource AncestorType={x:Type local:RegularButton}}}" />
    </Border>
</UserControl>
